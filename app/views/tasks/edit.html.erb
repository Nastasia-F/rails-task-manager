<div class="container">
  <h1>Edit task</h1>
  <%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <div>
    <%= f.label 'What do you want to edit?' %>
    <%= f.check_box :completed, {}, true, false %>
    <%= f.submit %>
  <% end %>
  </div>
</div>
