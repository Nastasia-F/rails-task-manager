<div class="container">
  <h1>New task</h1>
  <%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <div class="input"><%= f.submit class: 'btn btn-primary' %></div>
  <% end %>
  <div class="border-top">
    <div class="back-link">
      <i class="fas fa-redo"></i><%= link_to "Back to list", tasks_path %>
    </div>
  </div>
</div>
